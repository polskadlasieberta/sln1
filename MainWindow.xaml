<Window x:Class="michal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Przepisy"
        Height="450" Width="800">
	<DockPanel>
		<StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#2c3e50" Height="50">
			<Button Content="Przepisy" Command="{Binding ShowRecipesCommand}" Margin="10"/>
			<Button Content="Planer tygodnia" Command="{Binding ShowPlannerCommand}" Margin="10"/>
			<Button Content="Lista zakupów" Command="{Binding ShowShoppingListCommand}" Margin="10"/>
		</StackPanel>

		<ContentControl Content="{Binding CurrentView}" DockPanel.Dock="Top"/>
	</DockPanel>
</Window>
